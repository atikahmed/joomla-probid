<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

        <field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
                    readonly="true" class="readonly"
                    description="JGLOBAL_FIELD_ID_DESC" />
		
		<field name="title_" type="text" default="" size="85" label="JGLOBAL_FIELD_TITLEC_LABEL"
                    description="JGLOBAL_FIELD_TITLEC_DESC" required="true"/>
									
		<field name="category_" type="category" extension="com_ptslideshow" default="" label="JGLOBAL_FIELD_CATEGORY_LABEL"
			description="JGLOBAL_FIELD_CATEGORY_DESC" required="true"/>
				
		
		<field name="url_" type="media" directory="banners" hide_none="1" size="70" label="JGLOBAL_FIELD_FILEUPLOAD_LABEL"
         description="JGLOBAL_FIELD_FILEUPLOAD_DESC" required="true"/>
		
		<field name="description_" type="editor" default="" cols="40" rows="7" label="JGLOBAL_FIELD_DESCRIPTION_LABEL"
                    description="JGLOBAL_FIELD_DESCRIPTION_DESC" filter="safehtml" buttons="true" hide="readmore,pagebreak" />
		
		<field name="link" type="text" default="#" size="85" label="JGLOBAL_FIELD_LINK_LABEL"
                    description="JGLOBAL_FIELD_LINK_DESC" />
					
        <field
                name="state"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                class="inputbox"
                size="1"
                default="1">
                <option value="1">JPUBLISHED</option>
                <option value="0">JUNPUBLISHED</option>
            </field> 

        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
