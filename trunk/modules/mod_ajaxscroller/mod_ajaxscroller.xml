<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.7" client="site" method="upgrade">
	<name>AJAX Scroller</name>
	<author>Emir Sakic</author>
	<creationDate>December 2011</creationDate>
	<authorEmail>emir@sakic.net</authorEmail>
	<authorUrl>www.sakic.net</authorUrl>
	<copyright>Copyright (C) Emir Sakic 2008-2011. All Rights Reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>2.1.1</version>
	<description>This module displays and scrolls your articles, banners, remote RSS feeds or Twitter updates loaded dinamically with AJAX using different animation effects.</description>
	<files>
		<folder>assets</folder>
		<folder>helpers</folder>
		<filename
			module="mod_ajaxscroller">mod_ajaxscroller.php</filename>
		<filename>index.html</filename>
		<filename>scriptload.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_ajaxscroller.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="type"
					type="list"
					default="content"
					label="MOD_AJAXSCROLLER_FIELD_TYPE_LABEL"
					description="MOD_AJAXSCROLLER_FIELD_TYPE_DESC">
					<option value="content">MOD_AJAXSCROLLER_VALUE_CONTENT</option>
					<option value="banners">MOD_AJAXSCROLLER_VALUE_BANNERS</option>
					<option value="rss">MOD_AJAXSCROLLER_VALUE_RSS</option>
					<option value="twitter">MOD_AJAXSCROLLER_VALUE_TWITTER</option>
				</field>
			</fieldset>
				
			<fieldset name="general" label="MOD_AJAXSCROLLER_FIELD_GROUP_GENERAL_LABEL">
				<field name="items_count" type="text" default="1" label="MOD_AJAXSCROLLER_FIELD_ITEMS_COUNT_LABEL" description="MOD_AJAXSCROLLER_FIELD_ITEMS_COUNT_DESC" />
				<field name="items_limit" type="text" default="0" label="MOD_AJAXSCROLLER_FIELD_ITEMS_LIMIT_LABEL" description="MOD_AJAXSCROLLER_FIELD_ITEMS_LIMIT_DESC" />
				<field name="remember" type="radio" default="0" label="MOD_AJAXSCROLLER_FIELD_REMEMBER_LABEL" description="MOD_AJAXSCROLLER_FIELD_REMEMBER_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="title" type="radio" default="0" label="MOD_AJAXSCROLLER_FIELD_TITLE_LABEL" description="MOD_AJAXSCROLLER_FIELD_TITLE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="link_title" type="radio" default="1" label="MOD_AJAXSCROLLER_FIELD_LINK_TITLE_LABEL" description="MOD_AJAXSCROLLER_FIELD_LINK_TITLE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="date" type="radio" default="0" label="MOD_AJAXSCROLLER_FIELD_DATE_LABEL" description="MOD_AJAXSCROLLER_FIELD_DATE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="date_format" type="text" default="Y-m-d" label="MOD_AJAXSCROLLER_FIELD_DATE_FORMAT_LABEL" description="MOD_AJAXSCROLLER_FIELD_DATE_FORMAT_DESC" />
				<field name="text" type="radio" default="1" label="MOD_AJAXSCROLLER_FIELD_TEXT_LABEL" description="MOD_AJAXSCROLLER_FIELD_TEXT_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="char_limit" type="text" default="200" label="MOD_AJAXSCROLLER_FIELD_CHAR_LIMIT_LABEL" description="MOD_AJAXSCROLLER_FIELD_CHAR_LIMIT_DESC" />
				<field name="strip_tags" type="radio" default="0" label="MOD_AJAXSCROLLER_FIELD_STRIP_TAGS_LABEL" description="MOD_AJAXSCROLLER_FIELD_STRIP_TAGS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="read_more" type="radio" default="0" label="MOD_AJAXSCROLLER_FIELD_READ_MORE_LABEL" description="MOD_AJAXSCROLLER_FIELD_READ_MORE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="target_blank" type="radio" default="0" label="MOD_AJAXSCROLLER_FIELD_TARGET_BLANK_LABEL" description="MOD_AJAXSCROLLER_FIELD_TARGET_BLANK_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="display_image" type="radio" default="0" label="MOD_AJAXSCROLLER_FIELD_DISPLAY_IMAGE_LABEL" description="MOD_AJAXSCROLLER_FIELD_DISPLAY_IMAGE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="image_max_width" type="text" default="40" label="MOD_AJAXSCROLLER_FIELD_MAX_IMAGE_WIDTH_LABEL" description="MOD_AJAXSCROLLER_FIELD_MAX_IMAGE_WIDTH_DESC" />
				<field name="page" type="radio" default="0" label="MOD_AJAXSCROLLER_FIELD_PAGE_LABEL" description="MOD_AJAXSCROLLER_FIELD_PAGE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="ajax_off" type="radio" default="0" label="MOD_AJAXSCROLLER_FIELD_AJAX_OFF_LABEL" description="MOD_AJAXSCROLLER_FIELD_AJAX_OFF_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="include_mootools" type="radio" default="0" label="MOD_AJAXSCROLLER_FIELD_INCLUDE_MOOTOOLS_LABEL" description="MOD_AJAXSCROLLER_FIELD_INCLUDE_MOOTOOLS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="scr_cache" type="radio" default="0" label="MOD_AJAXSCROLLER_FIELD_CACHE_LABEL" description="MOD_AJAXSCROLLER_FIELD_CACHE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="cache_time" type="text" default="60" label="MOD_AJAXSCROLLER_FIELD_CACHE_TIME_LABEL" description="MOD_AJAXSCROLLER_FIELD_CACHE_TIME_DESC" />
			</fieldset>
			
			<fieldset name="content" label="MOD_AJAXSCROLLER_FIELD_GROUP_CONTENT_LABEL">
				<field name="categories" type="category" extension="com_content"
					multiple="true" size="10"
					label="MOD_AJAXSCROLLER_FIELD_CATEGORIES_LABEL"
					description="MOD_AJAXSCROLLER_FIELD_CATEGORIES_DESC"
				>
					<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>
				
				<field name="ordering" type="list" default="created DESC" label="MOD_AJAXSCROLLER_FIELD_ORDERING_LABEL" description="MOD_AJAXSCROLLER_FIELD_ORDERING_DESC">
					<option value="ordering ASC">MOD_AJAXSCROLLER_VALUE_ORDERING_ASC</option>
					<option value="ordering DESC">MOD_AJAXSCROLLER_VALUE_ORDERING_DESC</option>
					<option value="created ASC">MOD_AJAXSCROLLER_VALUE_CREATED_ASC</option>
					<option value="created DESC">MOD_AJAXSCROLLER_VALUE_CREATED_DESC</option>
					<option value="modified ASC">MOD_AJAXSCROLLER_VALUE_MODIFIED_ASC</option>
					<option value="modified DESC">MOD_AJAXSCROLLER_VALUE_MODIFIED_DESC</option>
					<option value="frontpage">MOD_AJAXSCROLLER_VALUE_FRONTPAGE</option>
					<option value="random">MOD_AJAXSCROLLER_VALUE_RANDOM</option>
				</field>
				<field name="text_type" type="list" default="both" label="MOD_AJAXSCROLLER_FIELD_TEXT_TYPE_LABEL" description="MOD_AJAXSCROLLER_FIELD_TEXT_TYPE_DESC">
					<option value="introtext">MOD_AJAXSCROLLER_VALUE_INTROTEXT</option>
					<option value="fulltext">MOD_AJAXSCROLLER_VALUE_FULLTEXT</option>
					<option value="both">MOD_AJAXSCROLLER_VALUE_INTROTEXT_AND_FULLTEXT</option>
				</field>
			</fieldset>
			
			<fieldset name="banners" label="MOD_AJAXSCROLLER_FIELD_GROUP_BANNERS_LABEL"
				addfieldpath="/administrator/components/com_banners/models/fields">				
				<field
					name="banner_categories"
					type="category"
					extension="com_banners"
					label="MOD_AJAXSCROLLER_FIELD_BANNER_CATEGORIES_LABEL"
					multiple="true" size="5"
					default=""
					description="MOD_AJAXSCROLLER_FIELD_BANNER_CATEGORIES_DESC">
					<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>
				
				<field
					name="banner_clients"
					type="bannerclient"
					multiple="true" size="5"
					label="MOD_AJAXSCROLLER_FIELD_BANNER_CLIENTS_LABEL"
					default="0"
					description="MOD_AJAXSCROLLER_FIELD_BANNER_CLIENTS_DESC" />
					
				<field name="banner_ordering" type="list" default="ordering ASC" label="MOD_AJAXSCROLLER_FIELD_BANNER_ORDERING_LABEL" description="MOD_AJAXSCROLLER_FIELD_BANNER_ORDERING_DESC">
					<option value="ordering ASC">MOD_AJAXSCROLLER_VALUE_ORDERING_ASC</option>
					<option value="ordering DESC">MOD_AJAXSCROLLER_VALUE_ORDERING_DESC</option>
					<option value="date ASC">MOD_AJAXSCROLLER_VALUE_DATE_ASC</option>
					<option value="date DESC">MOD_AJAXSCROLLER_VALUE_DATE_DESC</option>
					<option value="random">MOD_AJAXSCROLLER_VALUE_RANDOM</option>
				</field>
			</fieldset>
			
			<fieldset name="rss" label="MOD_AJAXSCROLLER_FIELD_GROUP_RSS_LABEL">
				<field name="rss_url" type="text" size="30" default="http://www.sakic.net/rss/" label="MOD_AJAXSCROLLER_FIELD_RSS_URL_LABEL" description="MOD_AJAXSCROLLER_FIELD_RSS_URL_DESC" />
				<field name="rss_image_only" type="radio" default="0" label="MOD_AJAXSCROLLER_FIELD_RSS_IMAGE_ONLY_LABEL" description="MOD_AJAXSCROLLER_FIELD_RSS_IMAGE_ONLY_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="twitter_timeline" type="list" default="user" label="MOD_AJAXSCROLLER_FIELD_TWITTER_TIMELINE_LABEL" description="MOD_AJAXSCROLLER_FIELD_TWITTER_TIMELINE_DESC">
					<option value="user">MOD_AJAXSCROLLER_VALUE_USER</option>
					<option value="user_rt">MOD_AJAXSCROLLER_VALUE_USER_RT</option>
					<option value="list">MOD_AJAXSCROLLER_VALUE_LIST</option>
					<option value="search">MOD_AJAXSCROLLER_VALUE_SEARCH</option>
				</field>
				<field name="twitter_username" type="text" default="" label="MOD_AJAXSCROLLER_FIELD_TWITTER_USERNAME_LABEL" description="MOD_AJAXSCROLLER_FIELD_TWITTER_USERNAME_DESC" />
				<field name="twitter_list" type="text" default="" label="MOD_AJAXSCROLLER_FIELD_TWITTER_LIST_LABEL" description="MOD_AJAXSCROLLER_FIELD_TWITTER_LIST_DESC" />
				<field name="twitter_keyword" type="text" default="#joomla" label="MOD_AJAXSCROLLER_FIELD_TWITTER_KEYWORD_LABEL" description="MOD_AJAXSCROLLER_FIELD_TWITTER_KEYWORD_DESC" />
				<field name="display_screen_name" type="radio" default="1" label="MOD_AJAXSCROLLER_FIELD_DISPLAY_SCREEN_NAME_LABEL" description="MOD_AJAXSCROLLER_FIELD_DISPLAY_SCREEN_NAME_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
			
			<fieldset name="effects" label="MOD_AJAXSCROLLER_FIELD_GROUP_EFFECTS_LABEL">
				<field name="direction" type="list" default="vertical" label="MOD_AJAXSCROLLER_FIELD_DIRECTION_LABEL" description="MOD_AJAXSCROLLER_FIELD_DIRECTION_DESC">
					<option value="horizontal">MOD_AJAXSCROLLER_VALUE_HORIZONTAL</option>
					<option value="vertical">MOD_AJAXSCROLLER_VALUE_VERTICAL</option>
					<option value="fade">MOD_AJAXSCROLLER_VALUE_FADE</option>
				</field>
				<field name="effect" type="list" default="linear" label="MOD_AJAXSCROLLER_FIELD_EFFECT_LABEL" description="MOD_AJAXSCROLLER_FIELD_EFFECT_DESC">
					<option value="linear">MOD_AJAXSCROLLER_VALUE_LINEAR</option>
					<option value="expo">MOD_AJAXSCROLLER_VALUE_EXPO</option>
					<option value="bounce">MOD_AJAXSCROLLER_VALUE_BOUNCE</option>
					<option value="back">MOD_AJAXSCROLLER_VALUE_BACK</option>
					<option value="elastic">MOD_AJAXSCROLLER_VALUE_ELASTIC</option>
				</field>
				<field name="speed" type="list" default="normal" label="MOD_AJAXSCROLLER_FIELD_SPEED_LABEL" description="MOD_AJAXSCROLLER_FIELD_SPEED_DESC">
					<option value="slow">MOD_AJAXSCROLLER_VALUE_SLOW</option>
					<option value="normal">MOD_AJAXSCROLLER_VALUE_NORMAL</option>
					<option value="fast">MOD_AJAXSCROLLER_VALUE_FAST</option>
				</field>
				<field name="show_nav" type="radio" default="1" label="MOD_AJAXSCROLLER_FIELD_SHOW_NAV_LABEL" description="MOD_AJAXSCROLLER_FIELD_SHOW_NAV_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="show_load" type="radio" default="1" label="MOD_AJAXSCROLLER_FIELD_SHOW_LOAD_LABEL" description="MOD_AJAXSCROLLER_FIELD_SHOW_LOAD_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="autoplay" type="radio" default="0" label="MOD_AJAXSCROLLER_FIELD_AUTOPLAY_LABEL" description="MOD_AJAXSCROLLER_FIELD_AUTOPLAY_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="show_play" type="radio" default="1" label="MOD_AJAXSCROLLER_FIELD_SHOW_PLAY_LABEL" description="MOD_AJAXSCROLLER_FIELD_SHOW_PLAY_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="delay" type="text" default="5" label="MOD_AJAXSCROLLER_FIELD_DELAY_LABEL" description="MOD_AJAXSCROLLER_FIELD_DELAY_DESC" />
			</fieldset>
			
			<fieldset name="style" label="MOD_AJAXSCROLLER_FIELD_GROUP_STYLE_LABEL">			
				<field name="moduleclass_sfx" type="text" default="" label="MOD_AJAXSCROLLER_FIELD_MODULECLASS_SFX_LABEL" description="MOD_AJAXSCROLLER_FIELD_MODULECLASS_SFX_DESC" />
				<field name="desc" type="spacer" hr="false" label="MOD_AJAXSCROLLER_FIELD_DESC_LABEL" description="MOD_AJAXSCROLLER_FIELD_DESC_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
